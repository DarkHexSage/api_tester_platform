# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_PASSWORD=secure_postgres_password
POSTGRES_USER=postgres
POSTGRES_INITDB_ARGS="-c shared_buffers=256MB -c max_connections=200"

# ==========================================
# SECURE API CONFIGURATION
# ==========================================
SECURE_DB_NAME=secure_api
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=7d
SECURE_PORT=3000
SECURE_NODE_ENV=production

# ==========================================
# INSECURE API CONFIGURATION
# ==========================================
INSECURE_DB_NAME=insecure_api
INSECURE_PORT=3001
INSECURE_NODE_ENV=development

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
REACT_APP_SECURE_API=http://localhost:3000
REACT_APP_INSECURE_API=http://localhost:3001
FRONTEND_PORT=3000

# ==========================================
# GENERAL CONFIGURATION
# ==========================================
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000,http://localhost:3001

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# CORS SETTINGS
# ==========================================
CORS_ORIGIN=http://localhost:5000

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info